FROM {{ base_image }}

# Install required packages
RUN apt-get update && apt-get install -y \
{%- for package in apt_packages %}
    {{ package }} \
{%- endfor %}
    && rm -rf /var/lib/apt/lists/*

{%- if fd_find_symlink %}

# Create symlink for fd-find to fd for easier use
RUN ln -s $(which fdfind) /usr/local/bin/fd
{%- endif %}

{%- if nodejs_enabled %}

# Install Node.js {{ nodejs_version }} using the NodeSource setup script
RUN curl -fsSL https://deb.nodesource.com/setup_{{ nodejs_version }}.x | bash - && \
    apt-get update && \
    apt-get install -y nodejs && \
    rm -rf /var/lib/apt/lists/*
{%- endif %}

{%- if github_cli_enabled %}

# Install GitHub CLI
RUN curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg | dd of=/usr/share/keyrings/githubcli-archive-keyring.gpg \
  && chmod go+r /usr/share/keyrings/githubcli-archive-keyring.gpg \
  && echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" | tee /etc/apt/sources.list.d/github-cli.list > /dev/null \
  && apt-get update \
  && apt-get install -y gh \
  && rm -rf /var/lib/apt/lists/*
{%- endif %}

{%- for custom in custom_dependencies %}

# Custom dependency: {{ custom.name }}
{%- for command in custom.commands %}
RUN {{ command }}
{%- endfor %}
{%- endfor %}

# Create non-root user with matching host UID/GID
ARG USER_UID=1000
ARG USER_GID=1000
RUN if getent passwd $USER_UID > /dev/null 2>&1; then \
        EXISTING_USER=$(getent passwd $USER_UID | cut -d: -f1); \
        deluser $EXISTING_USER || true; \
        delgroup $EXISTING_USER || true; \
    fi && \
    if getent group $USER_GID > /dev/null 2>&1; then \
        GROUP_NAME=$(getent group $USER_GID | cut -d: -f1); \
    else \
        groupadd -g $USER_GID {{ user }} && GROUP_NAME={{ user }}; \
    fi && \
    useradd -m -s /bin/bash -u $USER_UID -g $GROUP_NAME {{ user }} && \
    echo "{{ user }} ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Set proper ownership and switch to non-root user
RUN chown -R {{ user }}:{{ user }} {{ home_dir }}

# Copy entrypoint script
COPY entrypoint.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh

# Switch to non-root user - all subsequent commands and entrypoint run as this user
USER {{ user }}

# Set HOME and update PATH
ENV HOME={{ home_dir }}
ENV PATH="{{ home_dir }}/.npm-global/bin:${PATH}"

ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]
CMD ["bash"]
